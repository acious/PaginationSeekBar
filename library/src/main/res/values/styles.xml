<resources>
    <color name="psb_progress_color">#ff009688</color>
    <color name="psb_track_color">#ff939393</color>
    <color name="psb_disabled_color">#66939393</color>
    <color name="psb_ripple_color_pressed">#77939393</color>
    <color name="psb_ripple_color_focused">#99999999</color>

    <style name="DefaultSeekBar" parent="android:Widget">
        <item name="psb_indicatorTextAppearance">@style/DefaultIndicatorTextAppearance</item>
        <item name="psb_progressColor">@color/psb_progress_color_list</item>
        <item name="psb_trackColor">@color/psb_track_color_list</item>
        <item name="psb_rippleColor">@color/psb_ripple_color_list</item>
        <item name="psb_indicatorColor">@color/psb_progress_color</item>
        <item name="psb_indicatorElevation">4dp</item>
        <item name="psb_mirrorForRtl">true</item>
    </style>

    <style name="DefaultIndicatorTextAppearance" parent="android:TextAppearance.Small">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:padding">6dp</item>
    </style>

</resources>
