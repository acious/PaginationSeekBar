<resources>
    <!-- DiscreteSeekBar specific attributes -->
    <attr name="paginationSeekBarStyle" format="reference"/>
    <declare-styleable name="PaginationSeekBar">
        <attr name="psb_pageCountPerOneBoard" format="integer|dimension"/>
        <attr name="psb_min" format="integer|dimension"/>
        <attr name="psb_max" format="integer|dimension"/>
        <attr name="psb_value" format="integer|dimension"/>
        <attr name="psb_mirrorForRtl" format="boolean"/>
        <attr name="psb_allowTrackClickToDrag" format="boolean"/>
        <attr name="psb_progressColor" format="color|reference"/>
        <attr name="psb_trackColor" format="color|reference"/>
        <attr name="psb_indicatorTextAppearance" format="reference"/>
        <attr name="psb_indicatorColor" format="color|reference"/>
        <attr name="psb_indicatorElevation" format="dimension"/>
        <attr name="psb_indicatorFormatter" format="string|reference"/>
        <attr name="psb_indicatorPrevPageText" format="string"/>
        <attr name="psb_indicatorNextPageText" format="string"/>
        <attr name="psb_rippleColor" format="color|reference"/>
        <attr name="psb_thumbTextColor" format="color|reference"/>
    </declare-styleable>
</resources>